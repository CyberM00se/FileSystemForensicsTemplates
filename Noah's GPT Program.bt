typedef struct {
  char   signature[8]; // 'EFI PART'
  uint32 revision;
  uint32 header_size;
  uint32 crc32;
  uint32 reserved;
  uint64 current_lba;
  uint64 backup_lba;
  uint64 first_usable_lba;
  uint64 last_usable_lba;
  byte   disk_guid[16];
  uint64 lba_of_part_entry_array;
  uint32 total_partition_slots;
  uint32 size_partition_slot;
  uint32 crc32_partition_array;
  //byte   reserved_2[420];
  FSkip(420);
} GPT_Header;

typedef struct {
  ubyte part_type_guid[16] <format=hex>;
  ubyte part_uniq_guid[16];
  uint64 start_lba;
  uint64 end_lba;
  uint64 attributes;
  wchar_t name[36];
} GPT_Part_Entry;

